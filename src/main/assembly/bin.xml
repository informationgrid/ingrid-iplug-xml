<?xml version="1.0" encoding="utf-8"?>
<assembly>
  <id>installer</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
	<fileSet>
      <directory>src/main/release/conf</directory>
      <outputDirectory>${project.artifactId}-${project.version}/conf</outputDirectory>
    </fileSet>
	<fileSet>
      <directory>src/main/release/scripts</directory>
      <outputDirectory>${project.artifactId}-${project.version}/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/release/ant-installer</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>target/installer</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/webapp</directory>
      <outputDirectory>${project.artifactId}-${project.version}/webapp</outputDirectory>
      <excludes>
        <exclude>**/WEB-INF/jetty-web.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/base-webapp</directory>
      <outputDirectory>${project.artifactId}-${project.version}/webapp</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/logs</directory>
      <outputDirectory>${project.artifactId}-${project.version}/logs</outputDirectory>
    </fileSet>
	<fileSet>
      <directory>target/site</directory>
      <outputDirectory>${project.artifactId}-${project.version}/doc</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/release/jetty/jetty-web.xml</source>
      <outputDirectory>${project.artifactId}-${project.version}/webapp/WEB-INF</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>${project.artifactId}-${project.version}/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>de.ingrid:ingrid-installer</exclude>
        <exclude>de.ingrid:ingrid-base-webapp-1.0.0-SNAPSHOT-res</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
